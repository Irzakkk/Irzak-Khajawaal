{%- comment -%}
  sections/gift-guide-banner.liquid
  - Header with logo / tagline / choose button (desktop)
  - Mobile hamburger (left) opens animated overlay (logo → tagline → choose button)
  - Hero banner with desktop overlay content bottom-left and mobile content above banner
  - Mobile CTA inside banner centered bottom, wider, no hover animation
  - Separate bottom strip text for mobile
{%- endcomment -%}

{% liquid
  assign sec = section
%}

<section id="gift-guide-{{ section.id }}" data-section-id="{{ section.id }}" class="gift-guide-section">
  {%- style -%}
    /* ---------- VARIABLES ---------- */
    #gift-guide-{{ section.id }}{
      --gg-max-w:1280px;
      --gg-yellow: {{ section.settings.choose_btn_bg | default: '#FFE34D' }};
      --gg-bg: {{ section.settings.section_bg | default: '#ffffff' }};
      --gg-text: {{ section.settings.text_color | default: '#111111' }};
      --gg-black:#000000;
      width:100%;
      background:var(--gg-bg);
      color:var(--gg-text);
      box-sizing:border-box;
    }

    /* ---------- HEADER ---------- */
    #gift-guide-{{ section.id }} .hb{
      background: {{ section.settings.header_bg | default: '#ffffff' }};
      border-bottom:1px solid rgba(0,0,0,0.06);
      position:relative;
      z-index:1200;
    }
    #gift-guide-{{ section.id }} .hb-inner{
      max-width:var(--gg-max-w);
      margin:0 auto;
      padding:10px 16px;
      display:flex;
      align-items:center;
      justify-content:space-between;
      position:relative;
      height:64px;
    }

    #gift-guide-{{ section.id }} .hb-left{ display:flex; align-items:center; gap:12px; min-width:160px; }
    #gift-guide-{{ section.id }} .hb-logo{ font-size:22px; font-weight:700; margin:0; color:var(--gg-text); }

    #gift-guide-{{ section.id }} .hb-tagline--desktop{
      position:absolute; left:50%; transform:translateX(-50%);
      text-align:center; font-size:14px; white-space:nowrap; color:var(--gg-text);
    }

    #gift-guide-{{ section.id }} .hb-right{ min-width:170px; display:flex; justify-content:flex-end; }
    #gift-guide-{{ section.id }} .hb-choose{
      display:inline-flex; align-items:center; gap:10px; padding:12px 22px; border-radius:8px;
      background:var(--gg-yellow); color:#111; font-weight:700; text-decoration:none;
      border:1px solid rgba(0,0,0,0.06);
      transition: background .18s ease, color .18s ease, transform .12s ease, box-shadow .12s ease;
      white-space:nowrap;
    }
    #gift-guide-{{ section.id }} .hb-choose:hover{ background:var(--gg-black); color:var(--gg-yellow); transform:translateY(-2px); box-shadow:0 8px 20px rgba(0,0,0,.12); }

    /* Hamburger (mobile) - left */
    #gift-guide-{{ section.id }} .hb-hamburger{
      display:none; background:transparent; border:0; font-size:22px; cursor:pointer;
      padding:8px; width:44px; height:44px; z-index:9999; line-height:1;
      transition: transform .18s ease;
    }
    #gift-guide-{{ section.id }} .hb-hamburger.is-open{ transform:rotate(0.0001deg); } /* placeholder for subtle state */

    /* ---------- MOBILE OVERLAY MENU (animated) ---------- */
    #gift-guide-{{ section.id }} .hb-mobile-menu{
      /* backdrop layer */
      position:fixed; inset:0; z-index:9998;
      background: {{ section.settings.header_bg | default: '#ffffff' }};
      display:block; /* keep in DOM for animation; we control visibility via opacity & pointer-events */
      opacity:0; pointer-events:none;
      transition: opacity .22s ease;
      overflow-y:auto; -webkit-overflow-scrolling:touch;
    }
    #gift-guide-{{ section.id }} .hb-mobile-menu::after{
      /* soft bottom shadow like screenshot */
      content:''; position:fixed; left:0; right:0; top:64px; height:18px;
      box-shadow:0 10px 30px rgba(0,0,0,.12);
      pointer-events:none; opacity:0; transition:opacity .22s ease;
    }
    #gift-guide-{{ section.id }} .hb-mobile-menu.open{ opacity:1; pointer-events:auto; }
    #gift-guide-{{ section.id }} .hb-mobile-menu.open::after{ opacity:1; }

    /* the sliding panel (drops from top slightly) */
    #gift-guide-{{ section.id }} .hb-mobile-panel{
      max-width:var(--gg-max-w); margin:0 auto; padding:16px 20px 28px;
      transform:translateY(-14px); opacity:0;
      transition: transform .28s cubic-bezier(.22,.61,.36,1), opacity .22s ease;
    }
    #gift-guide-{{ section.id }} .hb-mobile-menu.open .hb-mobile-panel{
      transform:translateY(0); opacity:1;
    }

    #gift-guide-{{ section.id }} .hb-mobile-inner{
      display:flex; flex-direction:column; align-items:center; gap:16px;
    }

    /* Logo inside drawer */
    #gift-guide-{{ section.id }} .hb-mobile-logo{
      font-size:22px; font-weight:800; margin-top:6px; margin-bottom:8px;
      text-align:center; color:var(--gg-text); width:100%;
    }

    #gift-guide-{{ section.id }} .hb-mobile-tagline{
      font-size:16px; text-align:center; color:var(--gg-text);
      padding:0 10px; line-height:1.35;
    }

    #gift-guide-{{ section.id }} .hb-choose-mobile{
      display:inline-block; width:100%; max-width:420px; text-align:center;
      padding:14px 18px; border-radius:8px; background:var(--gg-yellow); color:#111;
      font-weight:700; text-decoration:none; border:1px solid rgba(0,0,0,0.06);
      white-space:nowrap;
    }
    #gift-guide-{{ section.id }} .hb-choose-mobile:hover{ background:var(--gg-black); color:var(--gg-yellow); }

    /* ---------- ANNOUNCEMENT ---------- */
    #gift-guide-{{ section.id }} .gg-announcement{ width:100%; background: {{ section.settings.announcement_bg | default: '#efefef' }}; }
    #gift-guide-{{ section.id }} .gg-announcement__inner{ max-width:var(--gg-max-w); margin:0 auto; padding:10px 16px; display:flex; justify-content:center; align-items:center; font-size:14px; }
    #gift-guide-{{ section.id }} .gg-announcement__text{ text-align:center; }

    /* ---------- HERO ---------- */
    #gift-guide-{{ section.id }} .gg-wrap{ position:relative; max-width:var(--gg-max-w); margin:0 auto; }
    #gift-guide-{{ section.id }} .gg-content{ position:relative; z-index:2; padding:20px 16px 0; max-width:720px; }
    #gift-guide-{{ section.id }} .gg-heading{ font-size:clamp(36px,5.2vw,84px); line-height:.95; font-weight:700; color:var(--gg-text); margin:0 0 12px; }
    #gift-guide-{{ section.id }} .gg-heading--mobile{ display:none; font-size:28px; line-height:1.05; font-weight:700; margin:6px 0 8px; }
    #gift-guide-{{ section.id }} .gg-subtext{ font-size:clamp(14px,1.5vw,18px); line-height:1.6; max-width:620px; color:var(--gg-text); margin:0; }
    #gift-guide-{{ section.id }} .gg-subtext--mobile{ display:none; }

    /* CTA single-line with inline arrow */
    #gift-guide-{{ section.id }} .gg-cta,
    #gift-guide-{{ section.id }} .gg-cta--mobile{
      white-space:nowrap; display:inline-flex; align-items:center; gap:10px;
    }
    #gift-guide-{{ section.id }} .gg-cta{
      margin-top:20px; background:var(--gg-black); color:#fff; text-decoration:none;
      padding:16px 40px; border-radius:10px; border:2px solid var(--gg-black); font-weight:700;
      transition:transform .18s ease, box-shadow .18s ease;
    }
    #gift-guide-{{ section.id }} .gg-cta:hover{ transform:translateY(-2px); box-shadow:0 10px 28px rgba(0,0,0,.18); }

    #gift-guide-{{ section.id }} .gg-cta--mobile{
      position:absolute; left:50%; bottom:20px; transform:translateX(-50%); display:none;
      padding:16px 56px; border-radius:12px; background:var(--gg-black); color:#fff; font-weight:700;
      text-decoration:none; border:2px solid var(--gg-black);
    }
    #gift-guide-{{ section.id }} .gg-cta--mobile:hover{ transform:none; box-shadow:none; }

    /* hero media */
    #gift-guide-{{ section.id }} .gg-hero{ position:relative; margin:0 auto; padding:0 16px 0; }
    #gift-guide-{{ section.id }} .gg-hero__media{ position:relative; width:100%; height:560px; overflow:hidden; }
    #gift-guide-{{ section.id }} .gg-hero__media img{ width:100%; height:100%; object-fit:cover; object-position:center; display:block; }

    /* ---------- BOTTOM STRIP (desktop + mobile variants) ---------- */
    #gift-guide-{{ section.id }} .gg-strip{ width:100%; background:#f7f7f7; border-top:1px solid rgba(0,0,0,.08); border-bottom:1px solid rgba(0,0,0,.08); }
    #gift-guide-{{ section.id }} .gg-strip__inner{ max-width:var(--gg-max-w); margin:0 auto; padding:10px 16px; text-align:center; font-size:12px; letter-spacing:.08em; font-weight:600; }
    #gift-guide-{{ section.id }} .gg-strip__inner--mobile{ display:none; }

    /* ---------- LAYOUT ---------- */
    @media (min-width:990px){
      #gift-guide-{{ section.id }} .hb-hamburger,
      #gift-guide-{{ section.id }} .hb-mobile-menu,
      #gift-guide-{{ section.id }} .gg-heading--mobile,
      #gift-guide-{{ section.id }} .gg-subtext--mobile,
      #gift-guide-{{ section.id }} .gg-cta--mobile{ display:none !important; }

      #gift-guide-{{ section.id }} .gg-content{ position:absolute; left:24px; bottom:40px; }
      #gift-guide-{{ section.id }} .gg-hero__media{ height:720px; }
    }

    @media (max-width:989px){
      /* mobile: logo centered, hamburger left */
      #gift-guide-{{ section.id }} .hb-inner{ justify-content:center; padding:12px 16px; }
      #gift-guide-{{ section.id }} .hb-hamburger{ display:inline-flex; position:absolute; left:12px; top:12px; }
      #gift-guide-{{ section.id }} .hb-left{ order:2; display:block; }
      #gift-guide-{{ section.id }} .hb-right, #gift-guide-{{ section.id }} .hb-tagline--desktop{ display:none; }
      #gift-guide-{{ section.id }} .hb-logo{ text-align:center; width:100%; }

      /* hero content above banner */
      #gift-guide-{{ section.id }} .gg-content{ position:static; text-align:center; padding:18px 16px 8px; }
      #gift-guide-{{ section.id }} .gg-heading{ display:none; }
      #gift-guide-{{ section.id }} .gg-subtext{ display:none; }
      #gift-guide-{{ section.id }} .gg-heading--mobile{ display:block; }
      #gift-guide-{{ section.id }} .gg-subtext--mobile{ display:block; margin-bottom:6px; }

      #gift-guide-{{ section.id }} .gg-hero__media{ height:420px; }
      #gift-guide-{{ section.id }} .gg-cta{ display:none; }
      #gift-guide-{{ section.id }} .gg-cta--mobile{ display:inline-flex; }

      /* bottom strip switch to mobile content */
      #gift-guide-{{ section.id }} .gg-strip__inner--desktop{ display:none; }
      #gift-guide-{{ section.id }} .gg-strip__inner--mobile{ display:block; }
    }
  {%- endstyle -%}

  <!-- HEADER -->
  <div class="hb" role="banner">
    <div class="hb-inner" role="navigation" aria-label="Gift header">
      <div class="hb-left" aria-hidden="true">
        <div class="hb-logo">{{ section.settings.logo_text }}</div>
      </div>

      <div class="hb-tagline--desktop" aria-hidden="true">{{ section.settings.tagline_text }}</div>

      <div class="hb-right" aria-hidden="true">
        {%- if section.settings.choose_btn_label != blank -%}
          <a class="hb-choose" href="{{ section.settings.choose_btn_link }}" aria-label="{{ section.settings.choose_btn_label }}">
            <span>{{ section.settings.choose_btn_label }}</span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"><path d="M6 12h12m0 0-5-5m5 5-5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </a>
        {%- endif -%}
      </div>

      <!-- mobile hamburger (left) -->
      <button class="hb-hamburger" id="hbHamburger-{{ section.id }}" aria-controls="hbMobileMenu-{{ section.id }}" aria-expanded="false" aria-label="Open menu" type="button">
        <span id="hbHamburgerIcon-{{ section.id }}">☰</span>
      </button>
    </div>

    <!-- Mobile overlay menu (animated drop) -->
    <div class="hb-mobile-menu" id="hbMobileMenu-{{ section.id }}" aria-hidden="true" role="dialog" aria-modal="true" aria-label="Mobile menu">
      <div class="hb-mobile-panel">
        <div class="hb-mobile-inner">
          <div class="hb-mobile-logo" tabindex="-1">{{ section.settings.logo_text }}</div>

          <div class="hb-mobile-tagline">{{ section.settings.tagline_text }}</div>

          {%- if section.settings.choose_btn_label != blank -%}
            <a class="hb-choose-mobile" href="{{ section.settings.choose_btn_link }}" aria-label="{{ section.settings.choose_btn_label }}">
              {{ section.settings.choose_btn_label }}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" style="margin-left:8px"><path d="M6 12h12m0 0-5-5m5 5-5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  <!-- Announcement bar (optional) -->
  <div class="gg-announcement" {% if section.settings.hide_announcement %}style="display:none"{% endif %}>
    <div class="gg-announcement__inner"><div class="gg-announcement__text">{{ section.settings.announcement_text }}</div></div>
  </div>

  <!-- HERO WRAP -->
  <div class="gg-wrap">
    <div class="gg-content">
      <h2 class="gg-heading">{{ section.settings.heading }}</h2>
      <div class="gg-subtext">{{ section.settings.subtext }}</div>

      <h2 class="gg-heading--mobile">{{ section.settings.mobile_heading }}</h2>
      <div class="gg-subtext--mobile">{{ section.settings.mobile_subtext }}</div>

      {%- if section.settings.cta_label != blank -%}
        <a class="gg-cta" href="{{ section.settings.cta_link }}">
          {{ section.settings.cta_label }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"><path d="M6 12h12m0 0-5-5m5 5-5 5" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
      {%- endif -%}
    </div>

    <div class="gg-hero">
      <div class="gg-hero__frame">
        <div class="gg-hero__media">
          {% if section.settings.bg_image != blank %}
            {%- render 'image', image: section.settings.bg_image, widths: '750,1100,1500,2000', sizes: '100vw', alt: section.settings.bg_image.alt | escape -%}
          {% else %}
            <img src="{{ 'placeholder-image.png' | asset_url }}" alt="" loading="lazy">
          {% endif %}

          {%- if section.settings.cta_label != blank -%}
            <a class="gg-cta--mobile" href="{{ section.settings.cta_link }}">
              {{ section.settings.cta_label }}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"><path d="M6 12h12m0 0-5-5m5 5-5 5" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom strip (desktop + mobile variants) -->
  <div class="gg-strip">
    <div class="gg-strip__inner gg-strip__inner--desktop">
      {{ section.settings.bottom_strip_text }}
    </div>
    <div class="gg-strip__inner gg-strip__inner--mobile">
      {{ section.settings.bottom_strip_text_mobile | default: section.settings.bottom_strip_text }}
    </div>
  </div>
</section>

<!-- Static JS: no Liquid inside this script tag (reads section id via data attribute) -->
<script>
(function(){
  'use strict';

  // locate section root
  var root = document.currentScript && document.currentScript.previousElementSibling;
  if (!root || !root.dataset || !root.dataset.sectionId) {
    var secs = document.querySelectorAll('[id^="gift-guide-"]');
    root = secs && secs.length ? secs[secs.length - 1] : document.body;
  }
  var sectionId = root && root.dataset ? root.dataset.sectionId : null;
  if (!sectionId) return;

  var hb = document.getElementById('hbHamburger-' + sectionId);
  var menu = document.getElementById('hbMobileMenu-' + sectionId);
  var icon = document.getElementById('hbHamburgerIcon-' + sectionId);

  if (!hb || !menu) return;
  if (hb.getAttribute('data-gift-hamburger-bound') === '1') return;
  hb.setAttribute('data-gift-hamburger-bound','1');

  function lockScroll(lock){
    try {
      document.documentElement.style.overflow = lock ? 'hidden' : '';
      document.body.style.overflow = lock ? 'hidden' : '';
    } catch(e){}
  }

  function openMenu(){
    menu.classList.add('open');
    hb.classList.add('is-open');
    hb.setAttribute('aria-expanded','true');
    menu.setAttribute('aria-hidden','false');
    if (icon) icon.textContent = '✕';
    lockScroll(true);
    // focus logo for a11y
    var logo = menu.querySelector('.hb-mobile-logo');
    if (logo && logo.focus) logo.focus({preventScroll:true});
  }

  function closeMenu(){
    menu.classList.remove('open');
    hb.classList.remove('is-open');
    hb.setAttribute('aria-expanded','false');
    menu.setAttribute('aria-hidden','true');
    if (icon) icon.textContent = '☰';
    lockScroll(false);
    hb.focus();
  }

  function toggleMenu(e){
    if (e && e.preventDefault) e.preventDefault();
    if (menu.classList.contains('open')) closeMenu(); else openMenu();
  }

  hb.addEventListener('click', toggleMenu, { passive: false });
  hb.addEventListener('touchstart', function(e){ e.preventDefault(); toggleMenu(); }, { passive: false });

  // close when clicking a link inside the menu
  menu.addEventListener('click', function(e){
    var a = e.target.closest && e.target.closest('a');
    if (a) closeMenu();
  });

  // close on ESC
  document.addEventListener('keydown', function(e){
    if ((e.key === 'Escape' || e.key === 'Esc') && menu.classList.contains('open')) closeMenu();
  });

  // close on resize to desktop
  window.addEventListener('resize', function(){
    if (window.innerWidth >= 990 && menu.classList.contains('open')) closeMenu();
  });

})();
</script>

